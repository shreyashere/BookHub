<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.internshala.bookhub.fragment.ProfileFragment">

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shreyas Bhat"
        android:layout_below="@+id/imgProfile"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@color/green"/>

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:layout_marginTop="30dp"
        android:text="Email: shreyas2000.kb@gmail.com"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: Shreedhama, Gundibail, Udupi"
        android:textSize="18sp"
        android:layout_below="@id/txtEmail"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone No: +91 9480233958"
        android:layout_below="@id/txtAddress"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>


</RelativeLayout>